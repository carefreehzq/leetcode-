/*
输入: "abcabcbb"
输出: 3 
解释: 因为无重复字符的最长子串是 "abc"，所以其长度为 3。
*/

class Solution {
public:
    int lengthOfLongestSubstring(string s) {
        if(s.size()==0)
            return 0;
        if(s.size()==1)
            return 1;
        auto len = s.size();
        int x = 1;
        int result = x;
        for(int y = 1;y<len;y++)
            {
                for(int t = y-result;t>=0;t--)
                {
                    map<char,int>a;
                    bool flag = true;
                    for(int i=t;i<=y;i++)
                    {
                        if(a.find(s[i])==a.end())
                            a[s[i]]=1;
                        else
                            {
                                flag = false;
                                break;
                            }
                    }
                    if(flag==true)
                    {
                        result = y-t+1;
                    }
                    else
                        break;
                }
            }
        return result;

    }
};
